<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/view_itemComment_divide"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray100"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_itemComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_itemComment_divide" />

    <TextView
        android:id="@+id/tv_itemComment_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/gray900"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_itemComment"
        app:layout_constraintTop_toTopOf="@id/iv_itemComment"
        tools:text="댓글 작성자 아이디" />

    <TextView
        android:id="@+id/tv_itemComment_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray900"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_itemComment_writer"
        app:layout_constraintTop_toBottomOf="@id/tv_itemComment_writer"
        tools:text="텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다.텍스트입니다." />


</androidx.constraintlayout.widget.ConstraintLayout>